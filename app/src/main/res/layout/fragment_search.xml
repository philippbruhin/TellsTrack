<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/searchFromLabel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center|left"
        android:text="From" />

    <EditText
        android:id="@+id/searchFromInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchFromLabel"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/searchFromLabel"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="From" />

    <TextView
        android:id="@+id/searchToLabel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchFromInput"
        android:layout_marginTop="17dp"
        android:gravity="center|left"
        android:text="To" />

    <EditText
        android:id="@+id/searchToInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchToLabel"
        android:layout_alignStart="@+id/searchFromInput"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="To" />


    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/searchToInput"
        android:layout_alignStart="@+id/searchToInput"
        android:layout_below="@+id/searchToInput"
        android:layout_marginTop="14dp"
        android:text="Search" />
</RelativeLayout>
